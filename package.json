{
  "name": "skeleton-parser",
  "description": "parses a skeleton project structure",
  "main": "dist/index.js",
  "bin": "cli.js",
  "version": "0.0.0-semantically-released",
  "scripts": {
    "build": "rm -rf dist/* && babel *.js --out-dir dist",
    "dev": "rm -rf dist/* && babel --watch *.js --out-dir dist --source-maps",
    "lint": "xo --ignore dist",
    "unit": "ava",
    "test": "npm run lint && npm run unit",
    "test:tdd": "ava --watch",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucalanca/skeleton-parser.git"
  },
  "keywords": [
    "cli-app",
    "cli",
    "skeleton",
    "parser"
  ],
  "author": "lucalanca",
  "license": "Apache-2.0",
  "dependencies": {
    "fs-promise": "^0.5.0",
    "globby": "^5.0.0",
    "js-yaml": "^3.6.1",
    "lodash.merge": "^4.6.0",
    "lodash.pickby": "^4.6.0",
    "meow": "^3.7.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chalk": "^1.1.3",
    "difflet": "^1.0.1",
    "semantic-release": "^4.3.5",
    "xo": "^0.16.0"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node"
    ]
  },
  "git-pre-hooks": {
    "pre-push": "npm test"
  }
}
